
-- Creación de la Base de Datos
IF EXISTS (SELECT * FROM sys.databases WHERE name = 'HotelManagementSystem')
BEGIN
    DROP DATABASE HotelManagementSystem; -- Para empezar limpio si hubo errores previos
END
CREATE DATABASE HotelManagementSystem;
GO

USE HotelManagementSystem;
GO

-- Creación de Tablas (Estructura Original + Gestión de Eventos CORREGIDA)

CREATE TABLE Ciudad (
    ciudad_id INT PRIMARY KEY IDENTITY(1,1),
    nombre_ciudad VARCHAR(100) NOT NULL,
    departamento_estado VARCHAR(100),
    pais VARCHAR(100) NOT NULL
);
GO

CREATE TABLE Cadena_Hotelera (
    cadena_id INT PRIMARY KEY IDENTITY(1,1),
    nombre_cadena VARCHAR(100) NOT NULL UNIQUE,
    descripcion NVARCHAR(MAX)
);
GO

CREATE TABLE Hotel (
    hotel_id INT PRIMARY KEY IDENTITY(1,1),
    cadena_id INT,
    nombre VARCHAR(100) NOT NULL,
    direccion VARCHAR(200) NOT NULL,
    ciudad_id INT NOT NULL,
    telefono VARCHAR(20) NOT NULL,
    email VARCHAR(100) NOT NULL UNIQUE,
    estrellas INT CHECK (estrellas BETWEEN 1 AND 5),
    fecha_apertura DATE NOT NULL,
    estado_operativo VARCHAR(20) DEFAULT 'activo',
    politica_cancelacion NVARCHAR(MAX),
    gerente_id INT, 
    FOREIGN KEY (cadena_id) REFERENCES Cadena_Hotelera(cadena_id) ON DELETE SET NULL,
    FOREIGN KEY (ciudad_id) REFERENCES Ciudad(ciudad_id),
    CONSTRAINT CK_Hotel_EstadoOperativo CHECK (estado_operativo IN ('activo', 'inactivo', 'en_construccion'))
);
GO

CREATE TABLE Tipo_Habitacion (
    tipo_habitacion_id INT PRIMARY KEY IDENTITY(1,1),
    nombre VARCHAR(50) NOT NULL UNIQUE,
    descripcion NVARCHAR(MAX),
    precio_base DECIMAL(10,2) NOT NULL,
    capacidad INT NOT NULL,
    comodidades NVARCHAR(MAX)
);
GO

CREATE TABLE Habitacion (
    habitacion_id INT PRIMARY KEY IDENTITY(1,1),
    hotel_id INT NOT NULL,
    tipo_habitacion_id INT NOT NULL,
    numero VARCHAR(10) NOT NULL,
    piso INT NOT NULL,
    estado VARCHAR(30) DEFAULT 'disponible',
    vista VARCHAR(50),
    descripcion NVARCHAR(MAX),
    FOREIGN KEY (hotel_id) REFERENCES Hotel(hotel_id) ON DELETE CASCADE,
    FOREIGN KEY (tipo_habitacion_id) REFERENCES Tipo_Habitacion(tipo_habitacion_id),
    CONSTRAINT unique_room_per_hotel UNIQUE (hotel_id, numero),
    CONSTRAINT CK_Habitacion_Estado CHECK (estado IN ('disponible', 'ocupada', 'mantenimiento', 'limpieza_pendiente'))
);
GO

CREATE TABLE Cliente (
    cliente_id INT PRIMARY KEY IDENTITY(1,1),
    nombre VARCHAR(100) NOT NULL,
    apellido VARCHAR(100) NOT NULL,
    tipo_documento VARCHAR(20) NOT NULL,
    numero_documento VARCHAR(20) NOT NULL UNIQUE,
    email VARCHAR(100) UNIQUE,
    telefono VARCHAR(20),
    direccion VARCHAR(200),
    ciudad_residencia_id INT,
    fecha_nacimiento DATE,
    fecha_registro DATETIME DEFAULT GETDATE(),
    FOREIGN KEY (ciudad_residencia_id) REFERENCES Ciudad(ciudad_id),
    CONSTRAINT CK_Cliente_TipoDocumento CHECK (tipo_documento IN ('DNI', 'Pasaporte', 'Cédula', 'Otro'))
);
GO

CREATE TABLE Cargo (
    cargo_id INT PRIMARY KEY IDENTITY(1,1),
    nombre_cargo VARCHAR(50) NOT NULL UNIQUE,
    descripcion NVARCHAR(MAX)
);
GO

CREATE TABLE Empleado (
    empleado_id INT PRIMARY KEY IDENTITY(1,1),
    hotel_id INT NOT NULL,
    cargo_id INT NOT NULL,
    nombre VARCHAR(100) NOT NULL,
    apellido VARCHAR(100) NOT NULL,
    tipo_documento VARCHAR(20) NOT NULL,
    numero_documento VARCHAR(20) NOT NULL UNIQUE,
    email VARCHAR(100) UNIQUE,
    telefono VARCHAR(20),
    direccion VARCHAR(200),
    fecha_nacimiento DATE,
    fecha_contratacion DATE NOT NULL,
    salario DECIMAL(10,2) NOT NULL,
    estado VARCHAR(20) DEFAULT 'activo',
    FOREIGN KEY (hotel_id) REFERENCES Hotel(hotel_id) ON DELETE CASCADE,
    FOREIGN KEY (cargo_id) REFERENCES Cargo(cargo_id),
    CONSTRAINT CK_Empleado_TipoDocumento CHECK (tipo_documento IN ('DNI', 'Pasaporte', 'Cédula', 'Otro')),
    CONSTRAINT CK_Empleado_Estado CHECK (estado IN ('activo', 'inactivo', 'vacaciones'))
);
GO

ALTER TABLE Hotel
ADD CONSTRAINT FK_Hotel_Gerente FOREIGN KEY (gerente_id) REFERENCES Empleado(empleado_id) ON DELETE NO ACTION; -- CORREGIDO: ON DELETE NO ACTION
GO

CREATE TABLE Reserva (
    reserva_id INT PRIMARY KEY IDENTITY(1,1),
    cliente_id INT NOT NULL,
    hotel_id INT NOT NULL,
    fecha_reserva DATETIME DEFAULT GETDATE(),
    fecha_entrada DATE NOT NULL,
    fecha_salida DATE NOT NULL,
    estado VARCHAR(20) DEFAULT 'pendiente',
    numero_huespedes INT NOT NULL,
    notas NVARCHAR(MAX),
    empleado_registro_id INT,
    FOREIGN KEY (cliente_id) REFERENCES Cliente(cliente_id),
    FOREIGN KEY (hotel_id) REFERENCES Hotel(hotel_id),
    FOREIGN KEY (empleado_registro_id) REFERENCES Empleado(empleado_id),
    CONSTRAINT valid_dates_reserva CHECK (fecha_salida > fecha_entrada),
    CONSTRAINT check_huespedes_positivos CHECK (numero_huespedes > 0),
    CONSTRAINT CK_Reserva_Estado CHECK (estado IN ('confirmada', 'cancelada', 'completada', 'pendiente', 'no_show'))
);
GO

CREATE TABLE Reserva_Habitacion (
    reserva_habitacion_id INT PRIMARY KEY IDENTITY(1,1),
    reserva_id INT NOT NULL,
    habitacion_id INT NOT NULL,
    precio_noche_cobrado DECIMAL(10,2) NOT NULL,
    estado_asignacion VARCHAR(20) DEFAULT 'asignada',
    FOREIGN KEY (reserva_id) REFERENCES Reserva(reserva_id) ON DELETE CASCADE,
    FOREIGN KEY (habitacion_id) REFERENCES Habitacion(habitacion_id),
    CONSTRAINT unique_room_reserva_assignment UNIQUE (reserva_id, habitacion_id),
    CONSTRAINT CK_ReservaHabitacion_EstadoAsignacion CHECK (estado_asignacion IN ('asignada', 'cambiada', 'cancelada'))
);
GO

CREATE TABLE Tipo_Servicio (
    tipo_servicio_id INT PRIMARY KEY IDENTITY(1,1),
    nombre_tipo VARCHAR(50) NOT NULL UNIQUE,
    descripcion NVARCHAR(MAX)
);
GO

CREATE TABLE Servicio (
    servicio_id INT PRIMARY KEY IDENTITY(1,1),
    hotel_id INT NOT NULL,
    tipo_servicio_id INT NOT NULL,
    nombre VARCHAR(100) NOT NULL,
    descripcion NVARCHAR(MAX),
    precio_base DECIMAL(10,2) NOT NULL,
    horario VARCHAR(100),
    capacidad INT,
    FOREIGN KEY (hotel_id) REFERENCES Hotel(hotel_id) ON DELETE CASCADE,
    FOREIGN KEY (tipo_servicio_id) REFERENCES Tipo_Servicio(tipo_servicio_id)
);
GO

CREATE TABLE Consumo_Servicio (
    consumo_servicio_id INT PRIMARY KEY IDENTITY(1,1),
    reserva_id INT NOT NULL,
    servicio_id INT NOT NULL,
    fecha_hora_consumo DATETIME DEFAULT GETDATE(),
    cantidad INT NOT NULL DEFAULT 1,
    precio_unitario_cobrado DECIMAL(10,2) NOT NULL,
    empleado_registro_id INT,
    FOREIGN KEY (reserva_id) REFERENCES Reserva(reserva_id) ON DELETE CASCADE,
    FOREIGN KEY (servicio_id) REFERENCES Servicio(servicio_id),
    FOREIGN KEY (empleado_registro_id) REFERENCES Empleado(empleado_id)
);
GO

CREATE TABLE Paquete (
    paquete_id INT PRIMARY KEY IDENTITY(1,1),
    nombre VARCHAR(100) NOT NULL UNIQUE,
    descripcion NVARCHAR(MAX),
    precio DECIMAL(12,2) NOT NULL,
    duracion_dias INT NOT NULL,
    valido_desde DATE NOT NULL,
    valido_hasta DATE NOT NULL,
    estado VARCHAR(20) DEFAULT 'activo',
    CONSTRAINT valid_package_dates CHECK (valido_hasta >= valido_desde),
    CONSTRAINT CK_Paquete_Estado CHECK (estado IN ('activo', 'inactivo', 'promocion'))
);
GO

CREATE TABLE Detalle_Paquete_Servicio (
    paquete_servicio_id INT PRIMARY KEY IDENTITY(1,1),
    paquete_id INT NOT NULL,
    servicio_id INT NOT NULL,
    cantidad_incluida INT NOT NULL DEFAULT 1,
    FOREIGN KEY (paquete_id) REFERENCES Paquete(paquete_id) ON DELETE CASCADE,
    FOREIGN KEY (servicio_id) REFERENCES Servicio(servicio_id) ON DELETE CASCADE,
    CONSTRAINT unique_package_service_item UNIQUE (paquete_id, servicio_id)
);
GO

CREATE TABLE Reserva_Paquete (
    reserva_paquete_id INT PRIMARY KEY IDENTITY(1,1),
    reserva_id INT NOT NULL,
    paquete_id INT NOT NULL,
    fecha_reserva_paquete DATETIME DEFAULT GETDATE(),
    precio_cobrado DECIMAL(12,2) NOT NULL,
    estado VARCHAR(20) DEFAULT 'reservado',
    FOREIGN KEY (reserva_id) REFERENCES Reserva(reserva_id) ON DELETE CASCADE,
    FOREIGN KEY (paquete_id) REFERENCES Paquete(paquete_id),
    CONSTRAINT CK_ReservaPaquete_Estado CHECK (estado IN ('reservado', 'cancelado', 'usado'))
);
GO

CREATE TABLE Tipo_Transporte (
    tipo_transporte_id INT PRIMARY KEY IDENTITY(1,1),
    nombre_tipo VARCHAR(50) NOT NULL UNIQUE,
    descripcion NVARCHAR(MAX)
);
GO

CREATE TABLE Transporte (
    transporte_id INT PRIMARY KEY IDENTITY(1,1),
    tipo_transporte_id INT NOT NULL,
    descripcion NVARCHAR(200),
    compania VARCHAR(100) NOT NULL,
    capacidad INT NOT NULL,
    precio_base DECIMAL(10,2) NOT NULL,
    notas NVARCHAR(MAX),
    FOREIGN KEY (tipo_transporte_id) REFERENCES Tipo_Transporte(tipo_transporte_id)
);
GO

CREATE TABLE Detalle_Paquete_Transporte (
    paquete_transporte_id INT PRIMARY KEY IDENTITY(1,1),
    paquete_id INT NOT NULL,
    transporte_id INT NOT NULL,
    tipo_trayecto VARCHAR(20) NOT NULL,
    origen VARCHAR(100),
    destino VARCHAR(100),
    FOREIGN KEY (paquete_id) REFERENCES Paquete(paquete_id) ON DELETE CASCADE,
    FOREIGN KEY (transporte_id) REFERENCES Transporte(transporte_id) ON DELETE CASCADE,
    CONSTRAINT unique_package_transport_item UNIQUE (paquete_id, transporte_id, tipo_trayecto),
    CONSTRAINT CK_DetallePaqueteTransporte_TipoTrayecto CHECK (tipo_trayecto IN ('ida', 'vuelta', 'ida_y_vuelta'))
);
GO

CREATE TABLE Restaurante (
    restaurante_id INT PRIMARY KEY IDENTITY(1,1),
    hotel_id INT NOT NULL,
    nombre VARCHAR(100) NOT NULL,
    tipo_cocina VARCHAR(100),
    horario_apertura TIME,
    horario_cierre TIME,
    capacidad_mesas INT,
    descripcion NVARCHAR(MAX),
    FOREIGN KEY (hotel_id) REFERENCES Hotel(hotel_id) ON DELETE CASCADE
);
GO

CREATE TABLE Reserva_Restaurante (
    reserva_restaurante_id INT PRIMARY KEY IDENTITY(1,1),
    cliente_id INT NOT NULL,
    restaurante_id INT NOT NULL,
    fecha_reserva DATE NOT NULL,
    hora_reserva TIME NOT NULL,
    numero_comensales INT NOT NULL,
    estado VARCHAR(20) DEFAULT 'confirmada',
    notas NVARCHAR(MAX),
    empleado_registro_id INT,
    FOREIGN KEY (cliente_id) REFERENCES Cliente(cliente_id),
    FOREIGN KEY (restaurante_id) REFERENCES Restaurante(restaurante_id),
    FOREIGN KEY (empleado_registro_id) REFERENCES Empleado(empleado_id),
    CONSTRAINT unique_restaurant_booking UNIQUE (restaurante_id, fecha_reserva, hora_reserva),
    CONSTRAINT CK_ReservaRestaurante_Estado CHECK (estado IN ('confirmada', 'cancelada', 'atendida', 'no_show'))
);
GO

CREATE TABLE Proveedor (
    proveedor_id INT PRIMARY KEY IDENTITY(1,1),
    nombre VARCHAR(100) NOT NULL,
    tipo VARCHAR(50) NOT NULL,
    contacto_nombre VARCHAR(100),
    telefono VARCHAR(20) NOT NULL,
    email VARCHAR(100) UNIQUE,
    direccion VARCHAR(200),
    identificacion_fiscal VARCHAR(30) UNIQUE,
    CONSTRAINT CK_Proveedor_Tipo CHECK (tipo IN ('alimentos', 'limpieza', 'mantenimiento', 'textiles', 'otros', 'tecnologia'))
);
GO

CREATE TABLE Item_Suministro (
    item_suministro_id INT PRIMARY KEY IDENTITY(1,1),
    proveedor_id INT NOT NULL,
    nombre_item VARCHAR(100) NOT NULL,
    descripcion NVARCHAR(MAX),
    unidad_medida VARCHAR(20) NOT NULL,
    precio_unitario_proveedor DECIMAL(10,2) NOT NULL,
    FOREIGN KEY (proveedor_id) REFERENCES Proveedor(proveedor_id),
    CONSTRAINT unique_item_per_supplier UNIQUE (proveedor_id, nombre_item)
);
GO

CREATE TABLE Inventario_Hotel (
    inventario_id INT PRIMARY KEY IDENTITY(1,1),
    hotel_id INT NOT NULL,
    item_suministro_id INT NOT NULL,
    stock_actual INT DEFAULT 0,
    stock_minimo INT DEFAULT 0,
    fecha_ultima_actualizacion DATETIME DEFAULT GETDATE(),
    ubicacion_almacen VARCHAR(100),
    FOREIGN KEY (hotel_id) REFERENCES Hotel(hotel_id) ON DELETE CASCADE,
    FOREIGN KEY (item_suministro_id) REFERENCES Item_Suministro(item_suministro_id),
    CONSTRAINT unique_item_in_hotel_inventory UNIQUE (hotel_id, item_suministro_id)
);
GO

CREATE TABLE Pedido_Suministro (
    pedido_id INT PRIMARY KEY IDENTITY(1,1),
    hotel_id INT NOT NULL,
    proveedor_id INT NOT NULL,
    empleado_id INT NOT NULL,
    fecha_pedido DATETIME DEFAULT GETDATE(),
    fecha_entrega_esperada DATE,
    fecha_entrega_real DATE,
    estado VARCHAR(30) DEFAULT 'pendiente',
    total DECIMAL(12,2),
    notas NVARCHAR(MAX),
    FOREIGN KEY (hotel_id) REFERENCES Hotel(hotel_id) ON DELETE CASCADE,
    FOREIGN KEY (proveedor_id) REFERENCES Proveedor(proveedor_id),
    FOREIGN KEY (empleado_id) REFERENCES Empleado(empleado_id),
    CONSTRAINT CK_PedidoSuministro_Estado CHECK (estado IN ('pendiente', 'entregado', 'cancelado', 'parcialmente_entregado'))
);
GO

CREATE TABLE Detalle_Pedido_Suministro (
    detalle_pedido_id INT PRIMARY KEY IDENTITY(1,1),
    pedido_id INT NOT NULL,
    item_suministro_id INT NOT NULL,
    cantidad_pedida INT NOT NULL,
    cantidad_recibida INT DEFAULT 0,
    precio_unitario_pedido DECIMAL(10,2) NOT NULL,
    subtotal DECIMAL(12,2) NOT NULL,
    FOREIGN KEY (pedido_id) REFERENCES Pedido_Suministro(pedido_id) ON DELETE CASCADE,
    FOREIGN KEY (item_suministro_id) REFERENCES Item_Suministro(item_suministro_id),
    CONSTRAINT unique_item_per_supply_order UNIQUE (pedido_id, item_suministro_id)
);
GO

CREATE TABLE CheckIn (
    checkin_id INT PRIMARY KEY IDENTITY(1,1),
    reserva_id INT NOT NULL UNIQUE,
    empleado_id INT NOT NULL,
    fecha_hora DATETIME DEFAULT GETDATE(),
    metodo_pago_adelanto VARCHAR(20),
    documentos_verificados BIT DEFAULT 0,
    observaciones NVARCHAR(MAX),
    FOREIGN KEY (reserva_id) REFERENCES Reserva(reserva_id) ON DELETE CASCADE,
    FOREIGN KEY (empleado_id) REFERENCES Empleado(empleado_id),
    CONSTRAINT CK_CheckIn_MetodoPagoAdelanto CHECK (metodo_pago_adelanto IN ('efectivo', 'tarjeta', 'transferencia', 'otro'))
);
GO

CREATE TABLE CheckOut (
    checkout_id INT PRIMARY KEY IDENTITY(1,1),
    reserva_id INT NOT NULL UNIQUE,
    empleado_id INT NOT NULL,
    fecha_hora DATETIME DEFAULT GETDATE(),
    total_factura DECIMAL(12,2) NOT NULL,
    metodo_pago_final VARCHAR(20) NOT NULL,
    observaciones NVARCHAR(MAX),
    FOREIGN KEY (reserva_id) REFERENCES Reserva(reserva_id) ON DELETE CASCADE,
    FOREIGN KEY (empleado_id) REFERENCES Empleado(empleado_id),
    CONSTRAINT CK_CheckOut_MetodoPagoFinal CHECK (metodo_pago_final IN ('efectivo', 'tarjeta', 'transferencia', 'otro'))
);
GO

CREATE TABLE Factura (
    factura_id INT PRIMARY KEY IDENTITY(1,1),
    reserva_id INT NOT NULL UNIQUE,
    cliente_id INT NOT NULL,
    fecha_emision DATETIME DEFAULT GETDATE(),
    subtotal DECIMAL(12,2) NOT NULL,
    impuestos DECIMAL(12,2) NOT NULL,
    total DECIMAL(12,2) NOT NULL,
    metodo_pago_factura VARCHAR(20) NOT NULL,
    estado VARCHAR(20) DEFAULT 'pendiente',
    empleado_emisor_id INT,
    FOREIGN KEY (reserva_id) REFERENCES Reserva(reserva_id) ON DELETE CASCADE,
    FOREIGN KEY (cliente_id) REFERENCES Cliente(cliente_id),
    FOREIGN KEY (empleado_emisor_id) REFERENCES Empleado(empleado_id),
    CONSTRAINT CK_Factura_MetodoPagoFactura CHECK (metodo_pago_factura IN ('efectivo', 'tarjeta', 'transferencia', 'otro', 'credito')),
    CONSTRAINT CK_Factura_Estado CHECK (estado IN ('pagada', 'pendiente', 'cancelada', 'anulada'))
);
GO

CREATE TABLE Detalle_Factura (
    detalle_factura_id INT PRIMARY KEY IDENTITY(1,1),
    factura_id INT NOT NULL,
    tipo_concepto VARCHAR(30) NOT NULL,
    referencia_id INT,
    descripcion_concepto NVARCHAR(255) NOT NULL,
    cantidad INT NOT NULL DEFAULT 1,
    precio_unitario DECIMAL(10,2) NOT NULL,
    subtotal DECIMAL(12,2) NOT NULL,
    FOREIGN KEY (factura_id) REFERENCES Factura(factura_id) ON DELETE CASCADE,
    CONSTRAINT CK_DetalleFactura_TipoConcepto CHECK (tipo_concepto IN ('habitacion', 'servicio_consumido', 'paquete_reservado', 'transporte_asociado', 'otro'))
);
GO

-- NUEVAS TABLAS PARA GESTIÓN DE EVENTOS (CORREGIDAS)
CREATE TABLE SalonEvento (
    SalonEventoID INT PRIMARY KEY IDENTITY(1,1),
    HotelID INT NOT NULL FOREIGN KEY REFERENCES Hotel(hotel_id) ON DELETE CASCADE, -- CORREGIDO: hotel_id
    Nombre VARCHAR(150) NOT NULL,
    Descripcion NVARCHAR(MAX) NULL,
    CapacidadMaxima INT NOT NULL,
    Ubicacion VARCHAR(100) NULL,
    PrecioPorHora DECIMAL(10,2) NULL,
    EstaActivo BIT DEFAULT 1
);
GO

CREATE TABLE TipoEvento (
    TipoEventoID INT PRIMARY KEY IDENTITY(1,1),
    NombreTipo VARCHAR(100) NOT NULL UNIQUE,
    Descripcion NVARCHAR(MAX) NULL
);
GO

CREATE TABLE ReservaEvento (
    ReservaEventoID INT PRIMARY KEY IDENTITY(1,1),
    ClienteID INT NOT NULL FOREIGN KEY REFERENCES Cliente(cliente_id), -- CORREGIDO: cliente_id
    SalonEventoID INT NOT NULL FOREIGN KEY REFERENCES SalonEvento(SalonEventoID),
    TipoEventoID INT NULL FOREIGN KEY REFERENCES TipoEvento(TipoEventoID),
    NombreEvento VARCHAR(200) NOT NULL,
    FechaSolicitud DATETIME DEFAULT GETDATE(),
    FechaEvento DATE NOT NULL,
    HoraInicio TIME NOT NULL,
    HoraFin TIME NOT NULL,
    NumeroAsistentesEstimado INT NOT NULL,
    NumeroAsistentesConfirmado INT NULL,
    EmpleadoResponsableID INT NULL FOREIGN KEY REFERENCES Empleado(empleado_id), -- Referencia a empleado_id
    Estado VARCHAR(50) NOT NULL CHECK (Estado IN ('Solicitada', 'Confirmada', 'En Curso', 'Cancelada', 'Realizada')),
    Notas NVARCHAR(MAX) NULL,
    MontoEstimadoSalon DECIMAL(12,2) NULL,
    MontoEstimadoServicios DECIMAL(12,2) NULL
);
GO

CREATE TABLE ServicioAdicionalEvento (
    ServicioAdicionalID INT PRIMARY KEY IDENTITY(1,1),
    NombreServicio VARCHAR(100) NOT NULL UNIQUE,
    Descripcion NVARCHAR(MAX) NULL,
    PrecioBase DECIMAL(10,2) NOT NULL,
    RequierePersonalPago BIT DEFAULT 0
);
GO

CREATE TABLE ReservaEvento_Servicio (
    ReservaEventoID INT NOT NULL FOREIGN KEY REFERENCES ReservaEvento(ReservaEventoID) ON DELETE CASCADE,
    ServicioAdicionalID INT NOT NULL FOREIGN KEY REFERENCES ServicioAdicionalEvento(ServicioAdicionalID),
    Cantidad INT NOT NULL DEFAULT 1,
    PrecioCobradoPorUnidad DECIMAL(10,2) NOT NULL,
    Subtotal AS (CONVERT(DECIMAL(12,2), Cantidad * PrecioCobradoPorUnidad)),
    Notas NVARCHAR(MAX) NULL,
    PRIMARY KEY (ReservaEventoID, ServicioAdicionalID)
);
GO

CREATE TABLE FacturaEvento (
    FacturaEventoID INT PRIMARY KEY IDENTITY(1,1),
    ReservaEventoID INT NOT NULL UNIQUE FOREIGN KEY REFERENCES ReservaEvento(ReservaEventoID),
    ClienteID INT NOT NULL FOREIGN KEY REFERENCES Cliente(cliente_id), -- CORREGIDO: cliente_id
    FechaEmision DATETIME DEFAULT GETDATE(),
    SubtotalSalon DECIMAL(12,2) NOT NULL,
    SubtotalServiciosAdicionales DECIMAL(12,2) NOT NULL,
    Impuestos DECIMAL(12,2) NOT NULL,
    TotalFactura DECIMAL(12,2) NOT NULL,
    MetodoPago VARCHAR(50) NULL,
    Estado VARCHAR(50) NOT NULL CHECK (Estado IN ('Pendiente', 'Pagada', 'Parcialmente Pagada', 'Anulada')),
    EmpleadoEmisorID INT NULL FOREIGN KEY REFERENCES Empleado(empleado_id), -- Referencia a empleado_id
    Notas NVARCHAR(MAX) NULL
);
GO

CREATE TABLE DetalleFacturaEvento (
    DetalleFacturaEventoID INT PRIMARY KEY IDENTITY(1,1),
    FacturaEventoID INT NOT NULL FOREIGN KEY REFERENCES FacturaEvento(FacturaEventoID) ON DELETE CASCADE,
    TipoConcepto VARCHAR(50) NOT NULL,
    ReferenciaConceptoID INT NULL,
    DescripcionConcepto NVARCHAR(255) NOT NULL,
    Cantidad INT NOT NULL,
    PrecioUnitario DECIMAL(10,2) NOT NULL,
    Subtotal DECIMAL(12,2) NOT NULL
);
GO

-- INDEXES
CREATE INDEX idx_cliente_documento ON Cliente(numero_documento);
CREATE INDEX idx_reserva_fechas ON Reserva(fecha_entrada, fecha_salida);
CREATE INDEX idx_habitacion_hotel_estado ON Habitacion(hotel_id, estado);
CREATE INDEX idx_servicio_hotel_tipo ON Servicio(hotel_id, tipo_servicio_id);
CREATE INDEX idx_paquete_fechas ON Paquete(valido_desde, valido_hasta);
CREATE INDEX idx_proveedor_tipo ON Proveedor(tipo);
CREATE INDEX idx_empleado_hotel_cargo ON Empleado(hotel_id, cargo_id);
CREATE INDEX idx_reserva_cliente ON Reserva(cliente_id);
CREATE INDEX idx_consumo_reserva ON Consumo_Servicio(reserva_id);
CREATE INDEX idx_reserva_habitacion_reserva ON Reserva_Habitacion(reserva_id);
CREATE INDEX IDX_ReservaEvento_FechaEvento ON ReservaEvento(FechaEvento);
CREATE INDEX IDX_ReservaEvento_ClienteID ON ReservaEvento(ClienteID);
CREATE INDEX IDX_ReservaEvento_SalonEventoID ON ReservaEvento(SalonEventoID);
GO

PRINT 'Esquema de base de datos HotelManagementSystem adaptado con Gestión de Eventos creado/actualizado.';
GO

-- Inserción de Datos de Ejemplo (Originales)
-- (Los INSERT INTO... que proporcionaste originalmente se colocarían aquí sin cambios,
-- ya que no hemos definido datos de ejemplo para las nuevas tablas de eventos)

-- 1. Ciudad (20 Registros)
INSERT INTO Ciudad (nombre_ciudad, departamento_estado, pais) VALUES
('Medellín', 'Antioquia', 'Colombia'),
('Cartagena', 'Bolívar', 'Colombia'),
('Bogotá', 'Cundinamarca', 'Colombia'),
('Cali', 'Valle del Cauca', 'Colombia'),
